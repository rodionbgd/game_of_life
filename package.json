{
  "name": "game_of_life",
  "version": "1.0.0",
  "description": "Game of Life",
  "main": "src/control.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src && prettier --check src",
    "lint:fix": "eslint --fix src && prettier --write src",
    "ci" : "npm run test && npm run lint:fix",
    "prepare": "husky install",
    "dev": "webpack --node-env development",
    "build": "webpack --node-env production"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,css,md,json,yml}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodionbgd/game_of_life.git"
  },
  "keywords": [
    "js",
    "gol",
    "gameoflife"
  ],
  "author": "Rodion",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rodionbgd/game_of_life/issues"
  },
  "homepage": "https://github.com/rodionbgd/game_of_life#readme",
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.9",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.6",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^11.1.2",
    "live-server": "^1.2.1",
    "live-server-https": "0.0.2",
    "mini-css-extract-plugin": "^2.2.0",
    "prettier": "2.3.2",
    "sass": "^1.38.0",
    "sass-loader": "^12.1.0",
    "typescript": "^4.4.4",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.7.2",
